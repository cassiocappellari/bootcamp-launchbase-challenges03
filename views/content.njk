{%extends 'layout.njk'%}

{%block head%}
    <title>Rocketseat</title>
{%endblock%}

{%block content%}
    
    <div class="cards-content">
        <div class="cards">
            {%for item in items%}
                <div class="card" id="{{item.id}}">
                    <img src="/assets/{{item.logo}}.svg" alt="Starter">
                    <h2>{{item.name}}</h2>
                    <p>{{item.modules}}</p>
                    <p>{{item.price}}</p>
                </div>
            {%endfor%}
    </div>
    <div class="modal-overlay">
        <div class="modal">
          <a class="close-modal">
               <i class="material-icons">close</i>
           </a>
            <a class="full-screen">
                <i class="material-icons">open_in_full</i>
            </a>
           <div class="modal-content">
              <iframe src="" frameborder="0"></iframe>
           </div>
      </div>
    </div>
    <script src="scripts.js"></script>

{%endblock%}